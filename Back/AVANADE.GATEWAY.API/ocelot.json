{
  "Routes": [
    
    /*======================================================
      ROTA DE SWAGGER (PARA ABRIR A UI DO AGREGADOR)
    ======================================================*/
    {
      "RouteKey": "swagger_root",
      "UpstreamPathTemplate": "/swagger",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/swagger/index.html",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-gateway-api",
          "Port": 8080
        }
      ],
      "RouteIsCaseSensitive": false
    },
    {
      "RouteKey": "swagger_everything",
      "UpstreamPathTemplate": "/swagger/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/swagger/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-gateway-api",
          "Port": 8080
        }
      ]
    },

    /*======================================================
      AUTH API
    ======================================================*/
    {
      "RouteKey": "auth_route",
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get" ],
      "DownstreamPathTemplate": "/api/v1/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-auth-api",
          "Port": 8080
        }
      ],
      "SwaggerKey": "auth-api"
    },

    /*======================================================
      USUARIO API
    ======================================================*/
    {
      "RouteKey": "usuario_route",
      "UpstreamPathTemplate": "/api/usuario/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/v1/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-usuario-api",
          "Port": 8080
        }
      ],
      "SwaggerKey": "usuario-api"
    },

    /*======================================================
      ESTOQUE API
    ======================================================*/
    {
      "RouteKey": "estoque_route",
      "UpstreamPathTemplate": "/api/estoque/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/v1/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-estoque-api",
          "Port": 8080
        }
      ],
      "SwaggerKey": "estoque-api"
    },

    /*======================================================
      VENDAS API
    ======================================================*/
    {
      "RouteKey": "vendas_route",
      "UpstreamPathTemplate": "/api/vendas/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/v1/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "avanade-vendas-api",
          "Port": 8080
        }
      ],
      "SwaggerKey": "vendas-api"
    }
  ],

  /*======================================================
    CONFIGURAÇÃO DO SWAGGER AGREGADO
  ======================================================*/
  "SwaggerEndPoints": [    
    {
      "Key": "auth-api",
      "Config": [
        {
          "Name": "API de Autenticação",
          "Version": "v1",
          "Url": "http://avanade-auth-api:8080/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "usuario-api",
      "Config": [
        {
          "Name": "API de Usuário",
          "Version": "v1",
          "Url": "http://avanade-usuario-api:8080/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "estoque-api",
      "Config": [
        {
          "Name": "API de Estoque",
          "Version": "v1",
          "Url": "http://avanade-estoque-api:8080/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "vendas-api",
      "Config": [
        {
          "Name": "API de Vendas",
          "Version": "v1",
          "Url": "http://avanade-vendas-api:8080/swagger/v1/swagger.json"
        }
      ]
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}
